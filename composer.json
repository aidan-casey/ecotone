{
    "name": "ecotone/ecotone",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Dariusz Gafka",
            "email": "dgafka.mail@gmail.com"
        }
    ],
    "keywords": ["ddd","cqrs","messaging","eip", "distributed architecture","ecotone", "ddd and cqrs on top of eip"],
    "description": "Provides a clean, elegant API for writing DDD CQRS and Event Sourcing applications on top off the well-known Enterprise Integration Patterns in PHP. It affords basic DDD and CQRS building blocks for aggregates, commands, queries, events, command handlers, event sourced aggregates, event handlers, query handlers, interceptors.",
    "autoload": {
        "psr-4": {
            "Ecotone\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Ecotone\\": "tests"
        },
        "psr-0": {
            "FixtureAutoloadTest\\": "tests\\Messaging",
            "TestingNamespace\\": "tests\\Messaging",
            "Incorrect\\": "tests\\Messaging\\TestingNamespace"
        }
    },
    "require": {
        "php": ">=7.3.0",
        "ramsey/uuid": "^3.0",
        "ocramius/proxy-manager": "^2.1.1",
        "doctrine/annotations": "^1.6.0",
        "symfony/expression-language": "^2.0|^3.0|^4.0|^5.0",
        "dragonmantank/cron-expression": "^2.2",
        "psr/log": "^1.1.0",
        "psr/http-message": "^1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0.0",
        "behat/behat": "^3.3.1",
        "phan/phan": "^1.2.0",
        "guzzlehttp/psr7": "^1.4",
        "php-coveralls/php-coveralls": "^2.1.0"
    }
}
