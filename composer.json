{
    "name": "ecotone/ecotone",
    "license": "MIT",
    "homepage": "https://docs.ecotone.tech/",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Dariusz Gafka",
            "email": "dgafka.mail@gmail.com"
        }
    ],
    "keywords": ["ddd","cqrs","messaging","eip", "distributed architecture","ecotone", "ddd and cqrs on top of eip"],
    "description": "Ecotone provides support for well known Enterprise Integration Patterns (EIP), to enable message driven architecture in PHP. On top of that follow an architectural pattern which is based on the principles of Domain-Driven Design (DDD) and Command Query Responsibility Segregation (CQRS) and provides you with the necessary building blocks to follow these principles",
    "autoload": {
        "psr-4": {
            "Ecotone\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Ecotone\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "ecotone/annotation-finder": "^1.0",
        "ramsey/uuid": "^3.0|^4.0",
        "ocramius/proxy-manager": "^2.1.1",
        "doctrine/annotations": "^1.6.0",
        "symfony/expression-language": "^3.0|^4.0|^5.0",
        "dragonmantank/cron-expression": "^2.2",
        "psr/log": "^1.1.0",
        "psr/http-message": "^1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0.0",
        "behat/behat": "^3.3.1",
        "phan/phan": "^1.2.0",
        "guzzlehttp/psr7": "^1.4",
        "php-coveralls/php-coveralls": "^2.1.0",
        "phpstan/phpstan": "^0.12"
    },
    "extra": {
        "branch-version": "1.x"
    }
}
